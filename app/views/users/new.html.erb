<h1>New User</h1>
<%= form_for @user do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :birthdat %>
    <%= form.date_field :birthday %>
  </div>

  <div class="field">
    <%= form.label :height %>
    <%= form.number_field :height, step: '0.01', value: '1.60' %>
  </div>

  <div class="field">
    <%= form.label :weight %>
    <%= form.number_field :weight, value: 70 %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <%= form.submit %>
<% end %>