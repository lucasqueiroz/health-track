<table>
  <tr>
    <th class="center">Workout</th>
    <th class="center">Calories</th>
    <th class="center">Date</th>
    <th colspan="2" class="center"></th>
  </tr>
  <% @workouts.each do |workout| %>
    <tr>
      <td class="center"><%= workout.name %></td>
      <td class="center"><%= workout.calories %></td>
      <td class="center"><%= format_date(workout.occurred_at) %></td>
      <td class="center"><%= link_to 'Delete', workout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <td class="center"><%= link_to 'Edit', edit_workout_path(workout) %></td>
    </tr>
  <% end %>
</table>